<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/plusone"
            android:layout_marginTop="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:background="@drawable/buttonshapegreen"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/plustwo"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_alignTop="@+id/plusone"
            android:layout_toRightOf="@+id/plusone"
            android:layout_toEndOf="@+id/plusone" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4"
            android:background="@drawable/buttonshapepink"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/plusfour"
            android:layout_alignTop="@+id/plustwo"
            android:layout_toLeftOf="@+id/plusten"
            android:layout_toStartOf="@+id/plusten"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10"
            android:id="@+id/plusten"
            android:background="@drawable/buttonshapepurple"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/plusfour"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:id="@+id/minusone"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/plusone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2"
            android:id="@+id/minustwo"
            android:background="@drawable/buttonshapegreen"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@+id/minusone"
            android:layout_alignLeft="@+id/plustwo"
            android:layout_alignStart="@+id/plustwo" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-4"
            android:background="@drawable/buttonshapepink"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/minusfour"
            android:layout_alignTop="@+id/minustwo"
            android:layout_alignLeft="@+id/plusfour"
            android:layout_alignStart="@+id/plusfour" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10"
            android:background="@drawable/buttonshapepurple"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/minusten"
            android:layout_alignBottom="@+id/minusfour"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Goal : "
            android:textSize="30sp"
            android:id="@+id/dailygoallabel"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/plusone"
            android:layout_toEndOf="@+id/plusone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="50"
            android:id="@+id/dialygoal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dailygoallabel"
            android:layout_toEndOf="@+id/dailygoallabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Score : "
            android:id="@+id/scorelabel"
            android:layout_marginTop="65dp"
            android:layout_below="@+id/minustwo"
            android:layout_alignLeft="@+id/minustwo"
            android:layout_alignStart="@+id/minustwo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:id="@+id/score"
            android:layout_alignTop="@+id/scorelabel"
            android:layout_alignRight="@+id/dialygoal"
            android:layout_alignEnd="@+id/dialygoal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:background="@drawable/buttonshapered"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:id="@+id/clear"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/scorelabel"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
